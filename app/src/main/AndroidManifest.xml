<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.matilhadeestudos.mensageiroqualquer">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Mensageiroqualquer"
        tools:targetApi="31">
        <activity
            android:name=".Activity.TelaChat"
            android:exported="false" />
        <activity
            android:name=".Activity.AdicionarContato"
            android:exported="false" />
        <activity
            android:name=".Activity.UserInfo"
            android:exported="false" />
        <activity
            android:name=".Activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.ChatActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.EsqueciSenha"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TelaLogin"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TelaCadastro"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.ListaContatos"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activity.TelaTest"
            android:exported="true"
            android:screenOrientation="portrait" />
    </application>

</manifest>